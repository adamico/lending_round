<h3><%= @user.name %> profile page</h3>
<h4>Your details</h4>
<p>Email: <%= @user.email if @user.email %></p>
<p>Address: <%= @user.address if @user.address %></p>
<h4>Your loans</h4>
<% if @user.notes.any? %>
<ul>
<% @user.notes.each do |note| %>
  <li><%= link_to "Loan ##{note.id}", note_path(note) %></li>
<% end %>
</ul>
<% end %>
